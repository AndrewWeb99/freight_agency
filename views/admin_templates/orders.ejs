                <h2>Заказы</h2>
                <div>
                    <canvas id="myChart"></canvas>
                </div>
                <div>
                    <table class="table table-striped table-sm">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Пункт А</th>
                                <th>Пункт Б</th>
                                <th>Расстояние</th>
                                <th>Тип</th>
                                <th>Цена, тг</th>
                                <th>Хрупкий груз</th>
                                <th>Упаковка груза</th>
                                <th>Имя заказчика</th>
                                <th>Номер телефона заказчика</th>
                                <th>Дата заказа</th>
                                <th>Статус</th>
                                <th>.</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(function(order, index) { %>
                                <tr>
                                    <td>
                                        <%= index + 1 %>
                                    </td>
                                    <td>
                                        <%= order.from %>
                                    </td>
                                    <td>
                                        <%= order.to %>
                                    </td>
                                    <td>
                                        <%= order.km_value %>
                                    </td>
                                    <td>
                                        <%= (order.transport_type=='main' )? 'Основной' : 'Догруз' %>
                                    </td>
                                    <td>
                                        <%= order.transport_sum_value %>
                                    </td>
                                    <td>
                                        <%= (order.thin_cargo)? 'Да' : 'Нет' %>
                                    </td>
                                    <td>
                                        <%= (order.pack_cargo)? 'Да' : 'Нет' %>
                                    </td>
                                    <td>
                                        <%= order.user_name %>
                                    </td>
                                    <td>
                                        <%= order.phone_number %>
                                    </td>
                                    <td>
                                        <%= order.date %>
                                    </td>
                                    <td>
