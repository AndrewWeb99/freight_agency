    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.14.1/moment.min.js"></script>


    <%
        var orderDate = orders.reduce((arrayOfDate, elem) => {
            arrayOfDate.push(elem.date)

            return arrayOfDate
        }, []);

        const data = Array(12).fill(0);

        orderDate.forEach(elem => {
            data[+elem.split('-')[1] - 1] += 1;
        });
    %>

    <script>
        
        const labels = [
            'Январь',
            'Февраль',
            'Март',
            'Апрель',
            'Май',
            'Июнь',
            'Июль',
            'Август',
            'Сентябрь',
            'Октябрь',
            'Ноябрь',
            'Декабрь'
        ];
        const data = {
            labels: labels,
            datasets: [{
                label: 'Количество заказов',
                backgroundColor: '#0d6efd',
                borderColor: '#0d6efd',
                data: [<%- data %>],
            }]
        };

        const config = {
            type: 'line',
            data,
            options: {}
        };
        const myChart = new Chart(
            document.getElementById('myChart'),
            config
        );
    </script>

    <script>
        let change_status = document.querySelectorAll('#change_status');

        change_status.forEach(element => {
            element.addEventListener('click', function () {
                let cargo_id = element.dataset.id;

                Swal.fire({
                    title: 'Изменить статус заказа',
                    width: '1024px',
                    showCloseButton: true,
                    showCancelButton: true,
                    cancelButtonText: 'Отмена',
                    html: `<form id="changeStatus" method="POST" action="/changeStatus">
                        <input name="_id" value="${cargo_id}" hidden>
                        <select class="form-control" name="cargo_status">
                        <option value="0">Заказ в обработке</option>
                        <option value="1">Заказ оформлен</option>
                        <option value="2">Заказ в дороге</option>
                        <option value="3">Заказ доставлен</option>
                        <option value="4">Возвращен</option>
                    </select></form>`
                }).then((result) => {
                    if (result.isConfirmed) {
                        changeStatus.submit();
                    }
                });
            });
        });
    </script>

